{
  "manifest_version": 3,
  "name": "Neuro Translate",
  "version": "0.1.0",
  "description": "Translate pages on demand using GPT-5-Nano.",
  "permissions": ["storage", "scripting", "tabs", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Neuro Translate"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["core/message-schema.js", "core/rpc.js", "content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
